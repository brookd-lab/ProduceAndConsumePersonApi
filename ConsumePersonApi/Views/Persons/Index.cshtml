@model IEnumerable<PersonApiDAL.Models.Person>
@{
    ViewData["Title"] = "Index";
    Layout = "_MyLayout";
}

@if (Model is null)
{
    <h3> Person List - Empty</h3>
}
else
{
    <h2>Person List</h2>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@if (Model is not null)
{
    <table width="50%" class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name) </th>
                <th>@Html.DisplayNameFor(model => model.Age) </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => person.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => person.Age)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@person.Id">Update</a>
                        <a asp-action="Details" asp-route-id="@person.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@person.Id">Delete</a>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}