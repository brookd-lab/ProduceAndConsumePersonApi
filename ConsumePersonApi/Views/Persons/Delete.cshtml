@model PersonApiDAL.Models.Person

@{
    ViewData["Title"] = "Delete";
    Layout = "_MyLayout";
}

<h4>Delete Person</h4>
<hr />
<div>
    <div class="col-md-6">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group mb-2">
            <label>Name</label>
            <input type="text" class="form-control" name="Name" placeholder="Name" value="@Model.Name" required readonly>
        </div>
        <div class="form-group mb-2">
            <label>Age</label>
            <input type="text" class="form-control" name="Age" placeholder="Age" value="@Model.Age" required readonly>
        </div>
    </div>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="form-group mt-2">
        <input type="submit" value="Delete Person" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</form>
